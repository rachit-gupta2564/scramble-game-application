<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/game"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    android:padding="16dp"

    tools:context=".MainActivity">

    <!--    correct animation-->

    <TextView
        android:id="@+id/textViewTimer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:fontFamily="@font/poppin"
        android:text="Time: 180"
        android:textColor="@android:color/white"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textViewScore"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:baselineAligned="false"
        android:fontFamily="@font/poppin"
        android:text="Score: 0"
        android:textColor="@android:color/white"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <com.airbnb.lottie.LottieAnimationView
        android:id="@+id/animation_view_correct"
        android:layout_width="253dp"
        android:layout_height="76dp"
        android:layout_gravity="center"
        android:layout_marginTop="64dp"
        android:visibility="visible"
        app:layout_constraintEnd_toStartOf="@+id/textViewScore"
        app:layout_constraintHorizontal_bias="0.493"
        app:layout_constraintStart_toEndOf="@+id/textViewTimer"
        app:layout_constraintTop_toTopOf="parent"
        app:lottie_autoPlay="false"
        app:lottie_loop="true"
        app:lottie_rawRes="@raw/correct"
        tools:ignore="MissingConstraints" />

    <TextView
        android:id="@+id/textViewScrambledWord"
        android:layout_width="match_parent"
        android:layout_height="47dp"
        android:fontFamily="@font/poppin"
        android:textColor="@android:color/white"
        android:textSize="28sp"
        android:textStyle="bold"
        app:layout_constraintTop_toBottomOf="@+id/animation_view_correct"
        tools:layout_editor_absoluteX="24dp" />

    <EditText
        android:id="@+id/editTextGuess"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/transparent"
        android:fontFamily="@font/poppin"
        android:hint="Enter your guess"
        android:inputType="text"
        android:textColor="@android:color/white"
        android:textSize="28sp"
        app:layout_constraintEnd_toEndOf="@+id/textViewScrambledWord"
        app:layout_constraintStart_toStartOf="@+id/textViewScrambledWord"
        app:layout_constraintTop_toBottomOf="@+id/textViewScrambledWord" />

    <Button
        android:id="@+id/buttonSubmit"
        android:layout_width="113dp"
        android:layout_height="55dp"
        android:layout_marginTop="40dp"
        android:background="@drawable/universal_button"
        android:fontFamily="@font/honk"
        android:paddingStart="24dp"
        android:paddingTop="12dp"
        android:paddingEnd="24dp"
        android:paddingBottom="12dp"
        android:text="Submit"
        android:textSize="21sp"
        app:layout_constraintEnd_toEndOf="@+id/editTextGuess"
        app:layout_constraintHorizontal_bias="0.515"
        app:layout_constraintStart_toStartOf="@+id/editTextGuess"
        app:layout_constraintTop_toBottomOf="@+id/editTextGuess" />

    <Button
        android:id="@+id/buttonRestart"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="28dp"
        android:background="@drawable/universal_button"
        android:fontFamily="@font/honk"
        android:padding="20dp"
        android:text="Restart"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="@+id/textViewScrambledWord"
        app:layout_constraintHorizontal_bias="0.516"
        app:layout_constraintStart_toStartOf="@+id/textViewScrambledWord"
        app:layout_constraintTop_toBottomOf="@+id/buttonSubmit" />

    <Button
        android:id="@+id/buttonBackToMainMenu"
        android:layout_width="94dp"
        android:layout_height="86dp"
        android:layout_centerInParent="true"
        android:layout_marginTop="16dp"
        android:background="@drawable/home_btn"
        app:layout_constraintEnd_toEndOf="@+id/buttonRestart"
        app:layout_constraintStart_toStartOf="@+id/buttonRestart"
        app:layout_constraintTop_toBottomOf="@+id/buttonRestart" />

</androidx.constraintlayout.widget.ConstraintLayout>