<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/game"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    android:padding="16dp"

    tools:context=".MainActivity">

    <TextView
        android:id="@+id/textViewTimer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="1dp"
        android:layout_marginRight="130dp"
        android:layout_marginBottom="10dp"
        android:fontFamily="@font/poppin"
        android:text="Time: 180"
        android:textColor="@android:color/white"
        android:textSize="18sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/textViewScore"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="143dp"
        android:layout_marginTop="-32dp"
        android:baselineAligned="false"
        android:fontFamily="@font/poppin"
        android:text="Score: 0"
        android:textColor="@android:color/white"
        android:textSize="18sp"
        android:textStyle="bold" />

    <!--    correct animation-->

    <com.airbnb.lottie.LottieAnimationView
        android:id="@+id/animation_view_correct"
        android:layout_width="190dp"
        android:layout_height="74dp"
        android:layout_gravity="center"
        app:lottie_autoPlay="false"
        android:visibility="visible"
        app:lottie_loop="true"
        app:lottie_rawRes="@raw/correct" />

    <TextView
        android:id="@+id/textViewScrambledWord"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="24dp"
        android:textColor="@android:color/white"
        android:fontFamily="@font/poppin"
        android:textSize="28sp"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/editTextGuess"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="24dp"
        android:background="@android:color/transparent"
        android:hint="Enter your guess"
        android:fontFamily="@font/poppin"
        android:inputType="text"
        android:textColor="@android:color/white"
        android:textSize="28sp" />

    <Button
        android:id="@+id/buttonSubmit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="24dp"
        android:paddingStart="24dp"
        android:paddingTop="12dp"
        android:background="@drawable/universal_button"
        android:fontFamily="@font/honk"
        android:paddingEnd="24dp"
        android:paddingBottom="12dp"
        android:text="Submit"
        android:textSize="25sp" />

    <Button
        android:id="@+id/buttonRestart"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="Restart"
        android:padding="20dp"
        android:layout_marginBottom="34dp"
        android:fontFamily="@font/honk"
        android:background="@drawable/universal_button"
        android:textSize="20sp" />

    <Button
        android:id="@+id/buttonBackToMainMenu"
        android:layout_width="88dp"
        android:layout_height="86dp"
        android:layout_centerInParent="true"
        android:background="@drawable/home_btn" />

</LinearLayout>